on early-boot
   exec u:r:vendor_modprobe:s0 -- /vendor/bin/modprobe -a -d /vendor/lib/modules nova_0flash_mmi

   # gestures
   chown system system /sys/class/touchscreen/NVT-ts/double_click
   chown system system /sys/class/touchscreen/NVT-ts/single_click

on fs
   exec u:r:vendor_modprobe:s0 -- /vendor/bin/modprobe -a -d /vendor/lib/modules wl2864c sx933x_sar

   rm /cache/boot_lc_main.txt
   rm /cache/boot_dmesg.txt
   start boot_lc_main
   start boot_dmesg

on boot

   service boot_lc_main /system/bin/logcat -f /cache/boot_lc_main.txt
    class main
    user root
    group root system
    disabled
    oneshot

    service boot_dmesg /system/bin/sh -c "dmesg -w > /cache/boot_dmesg.txt"
    class main
    user root
    group root system
    disabled
    oneshot


on property:sys.boot_completed=1
    stop boot_lc_main
    stop boot_dmesg
